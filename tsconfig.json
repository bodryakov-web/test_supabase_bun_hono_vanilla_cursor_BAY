{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"allowJs": true,
		"checkJs": false,
		"types": ["bun-types"],
		"verbatimModuleSyntax": true,
		"skipLibCheck": true
	},
	"include": ["server/**/*.ts", "public/**/*.ts"],
	"exclude": ["node_modules"]
}
